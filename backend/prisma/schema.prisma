datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Folder {
  id        String   @id @default(cuid())
  clientId  String
  name      String
  createdAt DateTime @default(now())
  pins      Pin[]
}

model Pin {
  id        String   @id @default(cuid())
  clientId  String
  content   String
  sourceUrl String?
  folderId  String?
  folder    Folder?  @relation(fields: [folderId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}
